{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "ct": {
            "dependsOn": ["^build"]
        },
        "dev": {
            "dependsOn": ["^build"],
            "persistent": true,
            "cache": false
        },
        "deploy": {
            "dependsOn": ["^build"],
            "persistent": true
        },
        "deploy:validate": {
            "dependsOn": ["^build"],
            "cache": false
        },
        "deploy:check-all": {
            "dependsOn": ["@lib/deploy-ctl#build"],
            "cache": false
        }
    }
}
